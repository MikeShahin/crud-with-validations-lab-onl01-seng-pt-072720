<%= form_for(@song) do |f| %>
    <% if @song.errors.any? %>
        <div id="error_explanation">
            <p>Something went wrong</p>

            <ul>
                <% @song.errors.full_messages.each do |m| %>
                    <li><%= m %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
        <br>
        <%= f.label :released %>
        <%= f.check_box :released %>
        <br>
        <%= f.label :release_year %> <br>
        <%= f.number_field :release_year %>
        <br>
        <%= f.label :genre %> <br>
        <%= f.text_field :genre %>
        <br>
        <%= f.label :artist_name %> <br>
        <%= f.text_field :artist_name %>
        <br>
        <%= f.submit %>
    </div>
<% end %>